<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.rit.csci622.data.dao.Dao">

	<resultMap type="User" id="User">
		<result property="idUser" column="idUser"/>
		<result property="username" column="username"/>
		<result property="first_name" column="first_name"/>
		<result property="last_name" column="last_name"/>
		<result property="email" column="email"/>
		<result property="password" column="password"/>
		<result property="role" column="role"/>
		<result property="joinedOn" column="joinedOn"/>
	</resultMap>

  <select id="createUser" resultType="int" statementType="CALLABLE">
    {call createUser(
    	#{user.username,jdbcType=BLOB,mode=IN},
    	#{user.first_name,jdbcType=BLOB,mode=IN},
    	#{user.last_name,jdbcType=BLOB,mode=IN},
    	#{user.email,jdbcType=BLOB,mode=IN},
    	#{user.password,jdbcType=BLOB,mode=IN},
    	#{key,jdbcType=BLOB,mode=IN}
    )}
  </select>
  
  <select id="getUser" resultType="User">
    {call getUser(${userId},${key})}
  </select>
  
  
  
</mapper>